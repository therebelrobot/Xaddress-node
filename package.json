{
  "name": "xaddress",
  "version": "0.0.2",
  "description": "Node port of Xaddress in Ruby - Give 7 billion people an instant physical address http://xaddress.org",
  "main": "lib/xaddress.js",
  "bin": {
    "xaddress": "bin/xaddress"
  },
  "scripts": {
    "pretest": "standard",
    "test": "tap ./*.tap.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/therebelrobot/Xaddress-node.git"
  },
  "keywords": [
    "address",
    "physical",
    "offline",
    "map",
    "geolocation",
    "geo",
    "location",
    "xaddress",
    "long",
    "lat",
    "longitude",
    "latitude",
    "lowtech",
    "avatar",
    "shortcode"
  ],
  "author": "Trent Oswald <trentoswald@therebelrobot.com> (@therebelrobot)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/therebelrobot/Xaddress-node/issues"
  },
  "homepage": "https://github.com/therebelrobot/Xaddress-node#readme",
  "dependencies": {
    "better-require": "0.0.3",
    "node-geocoder": "^3.14.0",
    "nopt": "^3.0.6",
    "numbro": "^1.9.3"
  },
  "devDependencies": {
    "careful": "^1.0.2",
    "standard": "^7.1.2",
    "tap": "^6.3.2",
    "validate-commit-msg": "^2.6.1"
  },
  "standard": {
    "ignore": [
      "*.old.*"
    ]
  },
  "config": {
    "careful": {
      "prefixes": [
        "feature",
        "fix",
        "hotfix",
        "release",
        "pre-release",
        "docs",
        "test"
      ],
      "suggestions": {
        "features": "feature",
        "feat": "feature",
        "bugfix": "fix",
        "releases": "release",
        "doc": "docs",
        "tests": "test"
      }
    },
    "ghooks": {
      "pre-commit": "careful",
      "pre-push": "careful",
      "commit-msg": "validate-commit-msg"
    }
  }
}
